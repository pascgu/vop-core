{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "WorkflowSchema",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "description": "Version of the workflow schema"
    },
    "name": {
      "type": "string",
      "description": "Name of the workflow"
    },
    "nodes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the node"
          },
          "type": {
            "type": "string",
            "description": "Type of the node",
            "enum": ["input", "output", "processing"]
          },
          "position": {
            "type": "object",
            "properties": {
              "x": {
                "type": "number",
                "description": "X-coordinate of the node"
              },
              "y": {
                "type": "number",
                "description": "Y-coordinate of the node"
              }
            },
            "required": ["x", "y"]
          },
          "properties": {
            "type": "object",
            "description": "Node-specific properties"
          }
        },
        "required": ["id", "type", "position"]
      }
    },
    "edges": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the edge"
          },
          "source": {
            "type": "string",
            "description": "ID of the source node"
          },
          "target": {
            "type": "string",
            "description": "ID of the target node"
          },
          "metadata": {
            "type": "object",
            "description": "Edge-specific metadata"
          }
        },
        "required": ["id", "source", "target"]
      }
    },
    "metadata": {
      "type": "object",
      "description": "Workflow metadata",
      "properties": {
        "author": {
          "type": "string",
          "description": "Author of the workflow"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Creation timestamp of the workflow"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "Last update timestamp of the workflow"
        }
      }
    }
  },
  "required": ["version", "name", "nodes", "edges", "metadata"]
}
